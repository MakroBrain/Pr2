<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="514" Width="876" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Viewing the weater" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" Height="41" Width="188"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelWeather" Height="366" Width="832"/>
        </ScrollViewer>
        <Label x:Name="labelLoad" Content="Loading" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Height="41" Width="86"/>
        <Button x:Name="buttonMinus" Content="Past 25" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Next 25" HorizontalAlignment="Left" Margin="766,0,0,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonPlus_Click"/>


    </Grid>
</Window>
